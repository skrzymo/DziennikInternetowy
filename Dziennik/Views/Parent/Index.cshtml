@model IEnumerable<Dziennik.Models.Ogloszenia>
@{
    ViewBag.Title = "Rodzic";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: sans-serif;
            background-image: url(../../Images/background_parent.jpg);
            background-repeat: no-repeat;
            background-size: cover;
        }

        .sidenav {
            margin-top: 50px;
            height: 100%;
            width: 220px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #34434A;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidenav a {
                padding: 6px 6px 6px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #fff;
                display: block;
                font-family: 'Lucida Handwriting';
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
        }

        .mySlides {
            display: none;
        }

        .content h2 {
            color: white;
            font-family: 'Lucida Handwriting';
            font-size: 36px;
            margin: 0 0 30px;
            padding: 0;
            text-align: center;
        }

        .content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 1000px;
            height: 500px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }

        .content .mySlidess h1 {
            margin-top: 40px;
            text-align: center;
            color: white;
            font-family: 'Lucida Handwriting';
            font-size: 20px;
        }

            .content .mySlidess p {
                padding: 20px;
                padding-left: 100px;
                padding-right: 40px;
                color: white;
                font-family: 'Lucida Handwriting';
                font-size: 16px;
                width: 900px;
                word-wrap: break-word;
            }

            .content .leftArrow {
                position: absolute;
                color: white;
                float: left;
                margin-left: 40px;
                top: 250px;
                font-size: 40px;
                font-family: 'Lucida Handwriting';
                cursor: pointer;
            }

            .content .rightArrow {
                position: relative;
                color: white;
                float: right;
                margin-right: 40px;
                top: 140px;
                font-size: 40px;
                font-family: 'Lucida Handwriting';
                cursor: pointer;
            }

            .content .allDots {
                text-align: center;
            }

            .content .dots {
                position: relative;
                top: 250px;
                color: #fff;
                display: inline-block;
                text-align: center;
                border-radius: 50%;
                border: 1px solid #ccc;
                background-color: transparent;
                height: 13px;
                width: 13px;
                padding: 0;
                cursor: pointer;
            }

            .content .dots-white {
                color: #000 !important;
                background-color: #fff !important
            }

        .dots-hover-white:hover {
            color: #000 !important;
            background-color: #fff !important
        }
        .box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 600px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="sidenav">
        <a>@Html.ActionLink("Dane osobowe", "PersonalDetails", "Parent", new { id = Session["PersonID"] }, htmlAttributes: new { id = "classesLink" })</a>
        <a>@Html.ActionLink("Wiadomości", "Messages", "Parent", routeValues: null, htmlAttributes: new { id = "subjectsLink" })</a>
        @foreach (var item in ViewBag.children)
        {
            <a>@Html.ActionLink((string)item.Osoba.FullName, "ChooseSubject", "Parent", routeValues: null, htmlAttributes: new { id = "teachersLink" })</a>
        }
    </div>
    
    <div class="content">
        <h2>Ogłoszenia od wychowawcy</h2>
        <div class="leftArrow" onclick="plusDivs(-1)">&#10094;</div>
        <div class="rightArrow" onclick="plusDivs(1)">&#10095;</div>
        <div class="allDots">
            @{ int counter = 1;
                foreach (var item in Model)
                {
                    <span class="dots demo dots-hover-white" onclick="currentDiv(@counter)"></span>
                    counter++;
                }
            }
        </div>
        @foreach (var item in Model)
        {
            <div class="mySlidess">
                <h1><b>@Html.DisplayFor(modelItem => item.tytul)</b></h1>
                @if (item.tresc.Length < 500)
                {
                    <p>@Html.DisplayFor(modelItem => item.tresc)</p>
                }
                else
                {
                    <p>@item.tresc.Substring(0, 500) ...@Html.ActionLink("Więcej", "NewsDetails/" + item.id_ogloszenia, "Admin")</p>
                }
            </div>
        }
    </div>

    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function currentDiv(n) {
            showDivs(slideIndex = n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlidess");
            var dots = document.getElementsByClassName("demo");
            if (n > x.length) {
                slideIndex = 1
            }
            if (n < 1) {
                slideIndex = x.length
            }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" dots-white", "");
            }
            x[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " dots-white";
        }
    </script>

</body>
