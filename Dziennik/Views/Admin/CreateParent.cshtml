@{
    ViewBag.Title = "Nowy nauczyciel";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" content="width=device-width" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url(../../Images/background_classroom.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
        }

        a {
            color: white;
        }

        .box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 400px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }

            .box .field-validation-error label {
                color: red;
                text-align: center;
            }

            .box h2 {
                margin: 0 0 30px;
                padding: 0;
                color: white;
                text-align: center;
            }

            .box .inputBox {
                position: relative;
            }

                .box .inputBox p2 {
                    width: 300px;
                    padding: 10px 0;
                    font-size: 16px;
                    color: white;
                    margin-bottom: 30px;
                    border: none;
                    border: 1px solid white;
                    outline: none;
                    background: transparent;
                }

                .box .inputBox input {
                    width: 300px;
                    padding: 10px 0;
                    font-size: 16px;
                    color: white;
                    margin-bottom: 30px;
                    border: none;
                    border: 1px solid white;
                    outline: none;
                    background: transparent;
                }

                .box .inputBox label {
                    position: absolute;
                    top: 0;
                    left: 0;
                    padding: 10px 10px;
                    font-size: 16px;
                    color: white;
                    pointer-events: none;
                    transition: .5s;
                }

                .box .inputBox input:focus ~ label,
                .box .inputBox input:valid ~ label {
                    top: -25px;
                    left: 0;
                    color: #03a9f4;
                    font-size: 12px;
                }

            .box input[type="submit"] {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
            }

            .box a.button {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 12px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
            }

            .box .dropDownList a {
                font-size: 16px;
                color: #000000;
            }
    </style>
</head>

<body style="background-image: url(../../Images/background_classroom.jpg);">
    @using (Html.BeginForm("CreateParent", "Admin", FormMethod.Post))
    {
        <div class="box">
            <h2>Nowy nauczyciel</h2>
            <div class="inputBox">
                <input type="text" name="imie" id="imie" required>
                <label>Imie</label>
            </div>
            <div class="inputBox">
                <input type="text" name="nazwisko" id="nazwisko" required>
                <label>Nazwisko</label>
            </div>
            <div class="inputBox">
                <input type="text" name="adres" id="adres" required>
                <label>Adres</label>
            </div>
            <div class="inputBox">
                <input type="email" name="email" id="email" required>
                <label>E-mail</label>
            </div>
            <div class="inputBox">
                <input type="text" name="haslo" id="haslo" required>
                <label>Haslo</label>
            </div>
            <div class="inputBox">
                <input type="text" name="telefon" id="telefon" required>
                <label>Telefon</label>
            </div>
            <div class="inputBox">
                <input type="date" name="dataUrodzenia" id="dataUrodzenia" required>
                <label>Data urodzenia</label>
            </div>
            <br><br />
            <input type="submit" value="Utwórz">&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<a>@Html.ActionLink("Cofnij", "Parents", null, new { @class = "button" })</a>
        </div>
    }
</body>
</html>
