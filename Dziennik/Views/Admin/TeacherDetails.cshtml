 @model Dziennik.Models.Nauczyciel

@{
    ViewBag.Title = "Szczegóły nauczyciela";
}
<!DOCTYPE html>

<html>
<meta charset="UTF-8" content="width=device-width" />
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background-image: url(../../Images/background_classroom.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        color: white;
    }

    a {
        color: white;
    }

    .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 450px;
        padding: 40px;
        background: rgba(0,0,0,.8);
        box-sizing: border-box;
        box-shadow: 0 15px 25px rgba(0,0,0,.5);
        border-radius: 10px;
    }

        .box h2 {
            margin: 0 0 30px;
            padding: 0;
            color: white;
            text-align: center;
        }

        .box .inputBox {
            position: relative;
            margin-bottom: 30px;
        }

        .box .inputBox2 {
            position: relative;
            margin-bottom: 5px;
        }

        .box .inputBoxStudents {
            position: relative;
            margin-bottom: 30px;
            border: 1px solid white;
            padding-bottom: 5px;
        }

        .box .inputBox .input {
            width: 300px;
            padding: 10px 0;
            font-size: 16px;
            margin-top: 12px;
            color: white;
            border: none;
            border: 1px solid white;
            outline: none;
            background: transparent;
        }

        .box .inputBox .label {
            left: 0;
            padding: 10px 10px;
            font-size: 16px;
            color: white;
            pointer-events: none;
        }

        .box .inputBox2 .label {
            left: 0;
            padding: 10px 10px;
            font-size: 16px;
            color: white;
            pointer-events: none;
        }

        .box .summary .backButton .button {
            background: transparent;
            border: none;
            outline: none;
            color: white;
            background: #03a9f4;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            float: right;
            font-size: larger;
            text-decoration: none;
            margin-bottom: 30px;
        }
</style>
</head>
<body style="background-image: url(../../Images/background_classroom.jpg);">
    <div class="box">
        <h2>
            @Html.DisplayFor(model => model.Osoba.FullName)
            <p>Nauczyciel przedmiotu @Html.DisplayFor(model => model.Przedmiot.nazwa)</p>
            <p>@Dziennik.ViewModels.EditTeacherModel.getSubjectName(Model.id_nauczyciela)</p>
        </h2>

    <div class="inputBox">
        @Html.LabelFor(model => model.Osoba.data_urodzenia, "Data urodzenia", htmlAttributes: new { @class = "label" })
        @Html.DisplayFor(model => model.Osoba.data_urodzenia)
    </div>

    <div class="inputBox">
        @Html.LabelFor(model => model.Osoba.adres, "Adres", htmlAttributes: new { @class = "label" })
        <div class="inputBoxStudents">
            @Html.DisplayFor(model => model.Osoba.adres)
        </div>
    </div>

    <div class="inputBox">
        @Html.LabelFor(model => model.Osoba.email, "E-mail", htmlAttributes: new { @class = "label" })
        @Html.DisplayFor(model => model.Osoba.email)
    </div>

    <div class="inputBox">
        @Html.LabelFor(model => model.Osoba.haslo, "Hasło", htmlAttributes: new { @class = "label" })
        @Html.DisplayFor(model => model.Osoba.haslo)
    </div>

    <div class="inputBox">
        @Html.LabelFor(model => model.Osoba.telefon, "Telefon", htmlAttributes: new { @class = "label" })
        @Html.DisplayFor(model => model.Osoba.telefon)
    </div>

    <div class="summary">
        <span class="backButton">@Html.ActionLink("Cofnij", "Teachers", null, new { @class = "button" })</span>
    </div>
</div>
</body>
</html>
