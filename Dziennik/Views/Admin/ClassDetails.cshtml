@model Dziennik.Models.Klasa

@{
    ViewBag.Title = "Szczegóły klasy";
}
<!DOCTYPE html>

<html>
<meta charset="UTF-8" content="width=device-width" />
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background-image: url(../../Images/background_classroom.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        color: white;
    }

    a {
        color: white;
    }

    .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 400px;
        padding: 40px;
        background: rgba(0,0,0,.8);
        box-sizing: border-box;
        box-shadow: 0 15px 25px rgba(0,0,0,.5);
        border-radius: 10px;
    }

        .box h2 {
            margin: 0 0 30px;
            padding: 0;
            color: white;
            text-align: center;
        }

        .box .inputBox {
            position: relative;
            margin-bottom: 30px;
        }

        .box .inputBox2 {
            position: relative;
            margin-bottom: 5px;
        }

        .box .inputBoxStudents {
            position: relative;
            margin-bottom: 30px;
            border: 1px solid white;
            padding-bottom: 5px;
        }

        .box .inputBox .input {
            width: 300px;
            padding: 10px 0;
            font-size: 16px;
            margin-top: 12px;
            color: white;
            border: none;
            border: 1px solid white;
            outline: none;
            background: transparent;
        }

        .box .inputBox .label {
            left: 0;
            padding: 10px 10px;
            font-size: 16px;
            color: white;
            pointer-events: none;
        }

        .box .inputBox2 .label {
            left: 0;
            padding: 10px 10px;
            font-size: 16px;
            color: white;
            pointer-events: none;
        }

        .box .summary .backButton .button {
            background: transparent;
            border: none;
            outline: none;
            color: white;
            background: #03a9f4;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            float: right;
            font-size: larger;
            text-decoration: none;
            margin-bottom: 30px;
        }
</style>
</head>
<body style="background-image: url(../../Images/background_classroom.jpg);">
    <div class="box">
        <h2>Klasa @Html.DisplayFor(model => model.nazwa)</h2>
        <div class="inputBox">
            @Html.LabelFor(model => model.id_wychowawcy, "Wychowawca", htmlAttributes: new { @class = "label" })
            @Html.DisplayFor(model => model.Nauczyciel.Osoba.FullName)
        </div>
        <div class="inputBox2">
            @Html.LabelFor(model => model.Uczens, "Uczniowie", htmlAttributes: new { @class = "label" })
        </div>
        <div class="inputBoxStudents">
            <ol>
                @foreach (var item in Model.Uczens.OrderBy(u => u.Osoba.FullName))
                {
                    <li>@Html.DisplayFor(modelItem => item.Osoba.FullName)</li>
                }
            </ol>
        </div>
        <div class="inputBox2">
            @Html.LabelFor(model => model.PrzedmiotyWKlasies, "Przedmioty", htmlAttributes: new { @class = "label" })
        </div>
        <div class="inputBoxStudents">
            <ol>
                @foreach (var item in Model.PrzedmiotyWKlasies.OrderBy(p => p.Przedmiot.nazwa))
                {
                    <li>@Html.DisplayFor(modelItem => item.Przedmiot.nazwa) - @Html.DisplayFor(modelItem => item.Nauczyciel.Osoba.FullName)</li>
                }
            </ol>
        </div>
        <div class="summary">
            <span class="backButton">@Html.ActionLink("Cofnij", "Classes", null, new { @class = "button" })</span>
        </div>
    </div>
</body>
</html>
