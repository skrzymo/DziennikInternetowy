@model IEnumerable<Dziennik.Models.Ocena>

@{
    ViewBag.Title = "Dodaj oceny";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" content="width=device-width" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url(../../Images/background_classroom.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
        }

        a {
            color: white;
        }

        .box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 600px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }

            .box .field-validation-error label {
                color: red;
                text-align: center;
            }

            .box h2 {
                margin: 0 0 30px;
                padding: 0;
                color: white;
                text-align: center;
            }

            .box h4 {
                margin: 0 0 30px;
                padding: 0;
                color: white;
                text-align: center;
            }

            .box .inputBox {
                position: relative;
                margin-bottom: 30px;
            }

            .box .inputBoxStudents {
                position: relative;
                margin-bottom: 30px;
                border: 1px solid white;
                padding: 10px;
                font-size: 16px;
            }

            .box .inputBox .input {
                width: 300px;
                padding: 10px 0;
                font-size: 16px;
                margin-top: 12px;
                color: white;
                border: none;
                border: 1px solid white;
                outline: none;
                background: transparent;
            }

            .box .inputBox .label {
                left: 0;
                padding: 10px 10px;
                font-size: 16px;
                color: white;
                pointer-events: none;
            }

            .box .summary input[type="submit"] {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
                float: left;
                margin-bottom: 30px;
            }

            .box a.button {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 12px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
            }

            .box .inputBox .dropDownList {
                margin-top: 12px;
            }

                .box .inputBox .dropDownList a {
                    font-size: 16px;
                    color: #000000;
                    margin-bottom: 30px;
                }
            }

            .box .inputBoxStudents .container .text {
                margin-left: 5px;
            }

            .box .inputBoxStudents .container:hover input ~ .checkmark {
                background-color: #ccc;
            }

            .box .inputBoxStudents .container input:checked ~ .checkmark {
                background-color: #2196F3;
            }

            .box .inputBoxStudents .checkmark:after {
                content: "";
                position: absolute;
                display: none;
            }

            .box .inputBoxStudents .container input:checked ~ .checkmark:after {
                display: block;
            }

            .box .inputBoxStudents .container .checkmark:after {
                left: 6px;
                top: 2px;
                width: 5px;
                height: 10px;
                border: solid white;
                border-width: 0 3px 3px 0;
                -webkit-transform: rotate(45deg);
                -ms-transform: rotate(45deg);
                transform: rotate(45deg);
            }

            .box .inputBoxStudents input[type=submit] {
                background: transparent;
                font-size: 12px;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 5px 5px;
                cursor: pointer;
                border-radius: 5px;
                float: left;
                margin-top: 10px;
                margin-left: 5px;
            }

            .box .inputBoxStudents .addStudent .button {
                background: transparent;
                font-size: 12px;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 5px 5px;
                cursor: pointer;
                border-radius: 5px;
                float: right;
                margin-top: 10px;
                margin-right: 5px;
                text-decoration: none;
            }

            .box .summary .backButton .button {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
                float: right;
                text-decoration: none;
                margin-bottom: 30px;
            }
    </style>
</head>
<body style="background-image: url(../../Images/background_teacher.jpg);">
    @using (Html.BeginForm(null, "Teacher", FormMethod.Post))
    {
    <div class="box">
        <h2>Oceny z przedmiotu @ViewBag.subjectName</h2>
        <h4>@ViewBag.studentName @ViewBag.studentClass</h4>

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_oceny)

        
        <div class="inputBox2">
            <div class="inputBoxStudents">
                @foreach (var item in Model)
                {
                    @Html.DisplayFor(modelItem => item.ocena1)<span> | </span>
                }
            </div>
        </div>
            <div class="inputBox">
                <div class="dropDownList">
                    <a>@Html.DropDownListFor(model => model.ocena1, new SelectList(
                                                                    new List<SelectListItem>
                                                                    {
                                                                        new SelectListItem { Text = "1", Value = "1"},
                                                                        new SelectListItem { Text = "2", Value = "2"},
                                                                        new SelectListItem { Text = "3", Value = "3"},
                                                                        new SelectListItem { Text = "4", Value = "4"},
                                                                        new SelectListItem { Text = "5", Value = "5"},
                                                                        new SelectListItem { Text = "6", Value = "6"},
                                                                    }, "Value", "Text"))</a>
                    @Html.ValidationMessageFor(model => model.ocena1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="summary">
                <input type="submit" value="Dodaj" /><span class="backButton">@Html.ActionLink("Cofnij", "ChooseStudent", null, new { @class = "button" })</span>
            </div>
        </div>
    }


</body>
</html>

