@model Dziennik.Models.Wiadomosc

@{
    ViewBag.Title = "Odpowiedź";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" content="width=device-width" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url(../../Images/background_classroom.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
        }

        a {
            color: white;
        }

        .box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 800px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }

            .box h2 {
                margin: 0 0 30px;
                padding: 0;
                color: white;
                text-align: center;
            }

            .box .inputBox,
            .box .inputBoxBig {
                position: relative;
                margin-bottom: 5px;
            }

            .box .inputBox2 {
                position: relative;
                margin-bottom: 5px;
            }

            .box .inputBoxStudents {
                position: relative;
                margin-bottom: 30px;
                border: 1px solid white;
                padding-bottom: 5px;
                width: 700px;
                word-wrap: break-word;
            }

            .box .inputBox .input {
                width: 300px;
                padding: 10px 0;
                font-size: 16px;
                margin-top: 12px;
                color: white;
                border: none;
                border: 1px solid white;
                outline: none;
                background: transparent;
            }

            .box .inputBox .label {
                left: 0;
                padding: 10px 10px;
                font-size: 16px;
                color: white;
                pointer-events: none;
            }

            .box .inputBox2 .label {
                left: 0;
                padding: 10px 10px;
                font-size: 16px;
                color: white;
                pointer-events: none;
            }

            .box .summary .backButton .button {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                float: right;
                font-size: larger;
                text-decoration: none;
                margin-bottom: 30px;
            }

            .box .inputBoxBig input {
                width: 40px;
                padding: 10px 0;
                font-size: 16px;
                color: white;
                margin-bottom: 30px;
                border: none;
                outline: none;
                background: transparent;
                right: 0;
            }

            .box .inputBoxBig textarea {
                width: 500px;
                height: 400px;
                padding: 10px 0;
                font-size: 16px;
                color: white;
                margin-bottom: 30px;
                border: none;
                border: 1px solid white;
                outline: none;
                background: transparent;
                resize: none;
            }

            .box .summary input[type="submit"] {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
                float: left;
                margin-bottom: 30px;
            }
    </style>
</head>
<body style="background-image: url(../../Images/background_teacher.jpg);">
    @using (Html.BeginForm("CreateResponse", "Teacher", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_wiadomosci)

        <div class="box">
            <h2>Wiadomość od @Html.DisplayFor(model => model.Rodzic.Osoba.FullName) z @Html.DisplayFor(model => model.data)</h2>

            <div class="inputBoxStudents">
                @Html.DisplayFor(model => model.tresc)
            </div>

            <div class="inputBoxBig">
                <textarea type="text" name="odpowiedz" id="odpowiedz" required maxlength="1000" onblur="TextAreaValidation(this,this.form.counter,1000);"
                          onkeyup="TextAreaValidation(this,this.form.counter,1000);">Odpowiedź</textarea>
                Pozostało <input onblur="TextAreaValidation(this.form.recipients,this,1000);" disabled="disabled" onfocus="this.blur();" value="1000" name="counter" />znaków
            </div>

            <div class="summary">
                <input type="submit" value="Wyślij" /><span class="backButton">@Html.ActionLink("Zamknij", "Messages", null, new { @class = "button" })</span>
            </div>
        </div>
    }
</body>
</html>

