@model IEnumerable<Dziennik.Models.Ogloszenia>
@{
    ViewBag.Title = "Strona główna";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .mySlides {
            display: none;
        }

        .header-main {
            position: fixed;
            top: 250px;
            left: 1220px;
            color: white;
            font-family: 'Lucida Handwriting';
            font-size: 36px;
        }

        .content {
            position: absolute;
            top: 300px;
            left: 850px;
            width: 970px;
            height: 280px;
            box-sizing: border-box;
            border-radius: 10px;
        }

        .content .mySlidess h1 {
            margin-top: 40px;
            text-align: center;
            color: white;
            font-family: 'Lucida Handwriting';
            font-size: 20px;
        }

            .content .mySlidess p {
                padding: 20px;
                padding-left: 100px;
                padding-right: 40px;
                color: white;
                font-family: 'Lucida Handwriting';
                font-size: 16px;
                width: 900px;
                word-wrap: break-word;
            }

            .content .leftArrow {
                position: absolute;
                color: white;
                float: left;
                margin-left: 40px;
                top: 130px;
                font-size: 40px;
                font-family: 'Lucida Handwriting';
                cursor: pointer;
            }

            .content .rightArrow {
                position: relative;
                color: white;
                float: right;
                margin-right: 40px;
                top: 130px;
                font-size: 40px;
                font-family: 'Lucida Handwriting';
                cursor: pointer;
            }

            .content .allDots {
                text-align: center;
            }

        .content .dots {
            position: relative;
            top: 250px;
            color: #fff;
            display: inline-block;
            text-align: center;
            border-radius: 50%;
            border: 1px solid #ccc;
            background-color: transparent;
            height: 13px;
            width: 13px;
            padding: 0;
            cursor: pointer;
        }

        .content .dots-white {
            color: #000 !important;
            background-color: #fff !important
        }

        .dots-hover-white:hover {
            color: #000 !important;
            background-color: #fff !important
        }

    </style>
</head>
<body style="background-image: url(../../Images/background_classroom.jpg);">
    <h2 class="header-main">Ogłoszenia</h2>
    <div class="content">
        <div class="leftArrow" onclick="plusDivs(-1)">&#10094;</div>
        <div class="rightArrow" onclick="plusDivs(1)">&#10095;</div>
        <div class="allDots">
            @{ int counter = 1;
                foreach (var item in Model)
                {
                    <span class="dots demo dots-hover-white" onclick="currentDiv(@counter)"></span>
                    counter++;
                }
            }
        </div>
        @foreach (var item in Model)
        {
            <div class="mySlidess">
                <h1><b>@Html.DisplayFor(modelItem => item.tytul)</b></h1>
                @if (item.tresc.Length < 500)
                {
                    <p>@Html.DisplayFor(modelItem => item.tresc)</p>
                }
                else
                {
                    <p>@item.tresc.Substring(0, 500) ...@Html.ActionLink("Więcej", "NewsDetails/" + item.id_ogloszenia, "Admin")</p>
                }
            </div>
        }
    </div>

    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function currentDiv(n) {
            showDivs(slideIndex = n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlidess");
            var dots = document.getElementsByClassName("demo");
            if (n > x.length) {
                slideIndex = 1
            }
            if (n < 1) {
                slideIndex = x.length
            }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" dots-white", "");
            }
            x[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " dots-white";
        }
    </script>
</body>