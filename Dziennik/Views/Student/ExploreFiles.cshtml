
@{
    ViewBag.Title = "Pliki";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" content="width=device-width" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url(../../Images/background_classroom.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
        }

        .box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 1000px;
            padding: 40px;
            background: rgba(0,0,0,.8);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0,0,0,.5);
            border-radius: 10px;
        }

            .box h2 {
                margin: 0 0 30px;
                padding: 0;
                color: white;
                text-align: center;
            }

            .box .summary .backButton .button {
                background: transparent;
                border: none;
                outline: none;
                color: white;
                background: #03a9f4;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
                font-size: larger;
                float: right;
                text-decoration: none;
                margin: 30px;
            }
    </style>
</head>
<body style="background-image: url(../../Images/background_student.jpg);">
    <div class="box">
        <h2>Dostępne pliki</h2>
        <ul>
            @*Listing the files *@
            @foreach (Dziennik.ViewModels.FileModel file in Model.fileModelList)
            {
                <li>
                    <a href="@("/Files/" + ViewBag.subjectName + "/" + file.FileName)"
                       title="@file.FileName" target="_blank">
                        @file.FileName
                    </a>. . . . . . @file.FileSizeText
                    . . . . . . @file.FileAccessed
                </li>
            }
        </ul>
        <div class="summary">
            <span class="backButton">@Html.ActionLink("Cofnij", "ChooseSubject", null, new { @class = "button" })</span>
        </div>
    </div>
</body>
</html>
